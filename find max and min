#num = 0
#tot = 0.0

largest = None
smallest = None

while True:
    num = input("Enter a number: ")  
    if num == "done":
        print("Maximum is", largest)
        print("Minimum is", smallest)
        break     
    try:
        inum = int(num)
    except:
        print('Invalid input')
        continue
      
    if largest is None or inum > largest:
        largest = inum
    #print("Maximum is", largest)
    
    if smallest is None or inum < smallest:
        smallest = inum 
    #print("Minimum is", smallest)
    
   #num = num + 1
   #tot = tot + fval  

